extends ../base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="post",enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", id="video", name="video",require,accept="video/*") 
        input(type="text", placeholder="Title",name ="title", required , maxLength = 80)
        input(type="text", placeholder="Description",name ="description", required , minLength = 20)
        input(type="text", placeholder="Hashtags, separated by comma.",name ="hashtags", required)
        input(type="submit",value="Upload Video") 